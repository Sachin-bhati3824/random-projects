{
  "manifest_version": 3,
  "name": "YouTube to Yout-be Redirector",
  "version": "1.0",
  "description": "Rewrites YouTube video links to yout-be.com.",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
